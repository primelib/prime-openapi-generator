root = true

# Global
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# ReadMe Files
[*.md]
trim_trailing_whitespace = false

# Java
[{*.java,*.kt,*.kts}]
indent_style = space
indent_size = 4

# Templates
[*.peb]
insert_final_newline = false

# JSON
[*.json]
indent_size = 4
